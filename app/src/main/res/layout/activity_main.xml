<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity"
    android:background="#2E8B57"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            app:srcCompat="@drawable/obraz" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textViewWykonawca"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Wykonawca"
                android:textSize="35dp"
                android:textColor="@color/white"
                />

            <TextView
                android:id="@+id/textViewAlbum"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Album"
                android:textSize="30dp"
                android:textColor="@color/white"
                />

            <TextView
                android:id="@+id/textViewDetale"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Detale"
                android:textSize="20dp"
                android:textColor="#61D918"
                />
        </LinearLayout>
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/imageButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            app:srcCompat="@drawable/obraz3"
            android:backgroundTint="#2E8B57"
            />


        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <ImageButton
            android:id="@+id/imageButton2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            app:srcCompat="@drawable/obraz2"
            android:backgroundTint="#2E8B57"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textViewPobrania"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Pobrania"
            android:textSize="20dp"
            android:textColor="#61D918"
            />

        <Button
            android:id="@+id/button3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Button"
            android:textColor="@color/black"
            android:backgroundTint="#61D918"
            android:textSize="20dp"
            android:textStyle="bold"
            />
    </LinearLayout>

</LinearLayout>